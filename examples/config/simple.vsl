fn on_config(config) {
    config.version_requirement = ">=1.4.0-rc.0, <2.0.0";

    config.server.name = "my.fqdn.com";

    config.server.system = #{
        user: "root",
        group: "root",
    };

    config.server.interfaces = #{
        addr: ["127.0.0.1:25"],
        addr_submission: ["127.0.0.1:587"],
        addr_submissions: ["127.0.0.1:465"],
    };

    config
}
